<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.lena.googletranslateexample">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launch"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".SettingsActivity"
            android:label="@string/title_activity_settings">
        </activity>
        <activity
            android:name=".GoogleTranslateExampleActivity"
            android:theme="@style/gtAppTheme">
        </activity>
        <activity
            android:name=".ForSettingsFragmentActivity"
            android:label="@string/title_activity_for_settings_fragment"
            android:parentActivityName="com.lena.googletranslateexample.MainActivity">
        </activity>
    </application>

</manifest>